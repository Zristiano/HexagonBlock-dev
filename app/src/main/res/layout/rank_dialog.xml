<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/rank_layout"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rank_dialog_radius_bg"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/rank_tablayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rank_title_bg"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/rank_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/left_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/close"/>

            <Button
                android:id="@+id/right_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/upload_score"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>