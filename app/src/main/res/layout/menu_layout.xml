<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="10dp"
              android:orientation="vertical">
    <FrameLayout
        android:layout_width="@dimen/menu_size"
        android:layout_height="wrap_content"
        android:background="#33FFFFFF">

        <TextView
            android:layout_width="25dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#33FFFFFF"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/share_3d"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_gray_menu"
        android:padding="@dimen/menu_pading"
        android:src="@drawable/selector_share_button"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/menu_divider_1"
        android:layout_width="@dimen/menu_size"
        android:layout_height="0.5dp"
        android:background="#33FFFFFF">

        <TextView
            android:layout_width="25dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#33FFFFFF"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/buzzer_3d"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_gray_menu"
        android:padding="@dimen/menu_pading"
        android:src="@drawable/sound_on_64"
        android:visibility="visible"/>

    <FrameLayout
        android:id="@+id/menu_divider_2"
        android:layout_width="@dimen/menu_size"
        android:layout_height="0.5dp"
        android:background="#33FFFFFF">

        <TextView
            android:layout_width="25dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center"
            android:background="#33FFFFFF"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/reboot_game_3d"
        android:layout_width="@dimen/menu_size"
        android:layout_height="@dimen/menu_size"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_b_gray_btn"
        android:padding="@dimen/menu_pading"
        android:src="@drawable/selector_restart_button"
        android:visibility="visible"/>

</LinearLayout>

